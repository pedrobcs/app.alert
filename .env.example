# Hyperliquid Configuration
# Environment (testnet | mainnet)
NEXT_PUBLIC_HYPERLIQUID_ENV=testnet
HYPERLIQUID_ENV=testnet

# Keeper Private Key (for custodial mode - NEVER commit this!)
# This is an Ethereum private key (0x...)
# Generate with: openssl rand -hex 32
# Or use an existing Ethereum wallet private key
KEEPER_PRIVATE_KEY=

# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Database
DATABASE_URL=file:./dev.db

# Safety Settings
NODE_ENV=development
ALLOW_LIVE_TRADES=false

# Keeper Configuration
KEEPER_POLL_INTERVAL_MS=300000
KEEPER_MAX_RETRIES=3

# Trading Parameters (defaults)
DEFAULT_STOP_LOSS_PCT=10
DEFAULT_TAKE_PROFIT_PCT=40
DEFAULT_MAX_LEVERAGE=5
DEFAULT_POSITION_SIZE_PCT=10

# Security (for production - use KMS/Vault)
# AWS_KMS_KEY_ID=
# VAULT_ADDR=
# VAULT_TOKEN=

# Hyperliquid API URLs (usually don't need to change these)
# HYPERLIQUID_API_URL=https://api.hyperliquid.xyz
# HYPERLIQUID_TESTNET_API_URL=https://api.hyperliquid-testnet.xyz
